<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gyq.sim.dao.LoginDao">
	<resultMap id="ResultMap" type="com.gyq.sim.entity.BaseUser">  
		<result column="id" property="id" />
        <result column="username" property="username" />  
        <result column="password" property="password" />
        <result column="identity" property="identity" />
    </resultMap> 
    
    <sql id="Base_Column_List">    
        id,username,password,identity
    </sql> 
    
	<!-- 用户登录验证查询 -->
	<select id="doLoginForUser" resultMap="ResultMap" parameterType="com.gyq.sim.entity.BaseUser">
		select 
			<include refid="Base_Column_List" /> 
		from 
			
			<if test="identity!=null and identity!='' and identity=='student'">
			sim_student
			</if>	
			<if test="identity!=null and identity!='' and identity=='teacher'">
			sim_teacher
			</if>	
			<if test="identity!=null and identity!='' and identity=='admin'">
			sim_admin
			</if>		
		where 
			username = #{username} 
			and password= #{password} 
	</select>
</mapper>